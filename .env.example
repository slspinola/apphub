# =============================================================================
# AppHub Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive information
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================

# PostgreSQL connection string for Prisma (with connection pooling)
# Format: postgresql://[user]:[password]@[host]:[port]/[database]?[params]
# For Supabase: Use the connection pooling URL (port 6543) with pgbouncer=true
# Example: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true
DATABASE_URL=""

# Direct PostgreSQL connection for migrations (without connection pooling)
# Required for Prisma migrations. Use direct connection (port 5432)
# For Supabase: Use the direct connection URL (port 5432)
# Example: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres
DIRECT_URL=""

# =============================================================================
# AUTHENTICATION CONFIGURATION (REQUIRED)
# =============================================================================

# Secret key for NextAuth v5 JWT encryption/decryption
# REQUIRED: Generate a secure random secret
# Generate with: openssl rand -base64 32
# Or use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# IMPORTANT: Keep this secret secure and never commit it to version control
# Changing this will invalidate all existing sessions
AUTH_SECRET=""

# Base URL of your application
# Used for OAuth callbacks and email links
# Defaults to http://localhost:3000 in development
# For production: Set to your production domain (e.g., https://apphub.example.com)
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# APPLICATION IDENTITY (OPTIONAL)
# =============================================================================

# Public application name displayed in the UI
# Defaults to "AppHub" if not set
NEXT_PUBLIC_APP_NAME="AppHub"

# =============================================================================
# SUPABASE CONFIGURATION (OPTIONAL - Required if using Supabase features)
# =============================================================================

# Supabase project URL
# Found in your Supabase project settings > API
# Format: https://[project-ref].supabase.co
NEXT_PUBLIC_SUPABASE_URL=""

# Supabase anonymous/public key
# Found in your Supabase project settings > API
# Safe to expose in client-side code (has Row Level Security)
NEXT_PUBLIC_SUPABASE_ANON_KEY=""

# Supabase service role key (server-side only)
# Found in your Supabase project settings > API
# NEVER expose this in client-side code - it bypasses Row Level Security
# Required for admin operations like sending emails
SUPABASE_SERVICE_ROLE_KEY=""

# =============================================================================
# OAUTH PROVIDER CONFIGURATION (OPTIONAL - Required for OAuth provider features)
# =============================================================================

# Private key for signing OAuth JWT tokens
# REQUIRED for production OAuth provider functionality
# Generate with: openssl genrsa -out private.pem 2048
# Convert to single-line format: awk 'NF {sub(/\r/, ""); printf "%s\\n",;}' private.pem
# Format: "-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----"
OAUTH_JWT_PRIVATE_KEY=""

# Public key for verifying OAuth JWT tokens
# REQUIRED for production OAuth provider functionality
# Generate with: openssl rsa -in private.pem -pubout -out public.pem
# Convert to single-line format: awk 'NF {sub(/\r/, ""); printf "%s\\n",;}' public.pem
# Format: "-----BEGIN PUBLIC KEY-----\\n...\\n-----END PUBLIC KEY-----"
OAUTH_JWT_PUBLIC_KEY=""

# Key ID for OAuth JWT tokens (used in JWT header)
# Defaults to "apphub-key-1" if not set
OAUTH_JWT_KEY_ID="apphub-key-1"

# =============================================================================
# WEBHOOK CONFIGURATION (OPTIONAL - Required for webhook encryption)
# =============================================================================

# Encryption key for webhook secrets
# REQUIRED if you plan to use webhook features
# Generate with: openssl rand -base64 32
# Used to encrypt/decrypt webhook secrets stored in the database
WEBHOOK_ENCRYPTION_KEY=""

# =============================================================================
# NOTES
# =============================================================================
# - Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# - Never commit your .env file to version control
# - For production, set these variables in your hosting platform (Vercel, etc.)
# - Restart your development server after changing environment variables
# =============================================================================
