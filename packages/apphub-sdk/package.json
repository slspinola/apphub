{
  "name": "@apphub/sdk",
  "version": "1.0.0",
  "description": "Official SDK for integrating applications with AppHub authentication and authorization system",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./nextjs": {
      "types": "./dist/nextjs/index.d.ts",
      "import": "./dist/nextjs/index.mjs",
      "require": "./dist/nextjs/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "apphub",
    "authentication",
    "authorization",
    "oauth",
    "jwt",
    "rbac",
    "multi-tenant",
    "sdk"
  ],
  "author": "AppHub Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/apphub.git",
    "directory": "packages/apphub-sdk"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "next-auth": ">=5.0.0-beta.0",
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    },
    "next-auth": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "jose": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}

